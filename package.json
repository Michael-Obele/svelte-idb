{
	"name": "svelte-idb",
	"version": "0.1.4",
	"description": "Zero-dependency, SSR-safe, Svelte 5 runes-native IndexedDB wrapper",
	"license": "MIT",
	"type": "module",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Michael-Obele/svelte-idb.git"
	},
	"homepage": "https://idb.svelte-apps.me/",
	"documentation": "https://idb.svelte-apps.me/docs/installation",
	"bugs": {
		"url": "https://github.com/Michael-Obele/svelte-idb/issues"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"publishConfig": {
		"access": "public",
		"provenance": true
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"package": "svelte-kit sync && svelte-package --input src/lib",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check .",
		"format": "prettier --write ."
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./svelte": {
			"types": "./dist/svelte/index.d.ts",
			"svelte": "./dist/svelte/index.js",
			"default": "./dist/svelte/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@internationalized/date": "^3.10.0",
		"@lucide/svelte": "^0.561.0",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.50.2",
		"@sveltejs/package": "^2.5.7",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/vite": "^4.1.18",
		"bits-ui": "^2.14.4",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"publint": "^0.3.17",
		"shiki-block-svelte": "^1.1.1",
		"svelte": "^5.51.0",
		"svelte-check": "^4.3.6",
		"tailwind-variants": "^3.2.2",
		"tailwindcss": "^4.1.18",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3",
		"clsx": "^2.1.1",
		"tailwind-merge": "^3.5.0",
		"vite": "^7.3.1"
	},
	"keywords": [
		"svelte",
		"sveltekit",
		"indexeddb",
		"reactive",
		"database",
		"offline-first",
		"svelte-5",
		"runes",
		"ssr-safe",
		"zero-dependency"
	]
}
